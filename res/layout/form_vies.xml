<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/vies" />

    <TextView
        android:id="@+id/lblNovaVia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#aa99bb"
        android:gravity="center|left"
        android:padding="5dp"
        android:text="Nom via"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txtNomVia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >
    </EditText>
    
    <TextView
        android:id="@+id/lblGrau"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#aa99bb"
        android:gravity="center|left"
        android:padding="5dp"
        android:text="Grau"
        android:textSize="15sp" />
    
    <EditText
        android:id="@+id/txtGrau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >
    </EditText>

    <RatingBar
        android:id="@+id/ratQualitat"
        style="@style/RatingBarPetit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:max="5"
        android:numStars="5"
        android:stepSize="1"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnInserir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="InserirDades"
        android:text="Inserir" />

</LinearLayout>